@model IEnumerable<MediumClone.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="mb-4">Latest News</h1>

@if (Model != null && Model.Any())
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Content.Substring(0, Math.Min(post.Content.Length, 100))...</p>
                        <p class="card-text"><small class="text-muted">Category: @post.Category</small></p>
                        <p class="card-text"><small class="text-muted">Views: @post.ViewCount</small></p>
                        <a asp-controller="Post" asp-action="Details" asp-route-id="@post.Id" class="btn btn-primary">Read More</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No posts available.</p>
}
